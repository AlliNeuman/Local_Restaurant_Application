<h3>Edit Restaurant</h3>
<br><br>

<form method="post" action="/restaurants/<%=@restaurant.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label>Restaurant Name: </label><br>
  <input type="text" name="name" value="<%=@restaurant.name%>"><br><br>
  <label>Neighborhood: </label><br>
  <input type="text" name="neighborhood" value="<%=@restaurant.neighborhood%>"><br><br>
  <label>Street Address: </label><br>
  <input type="text" name="street_address" value="<%=@restaurant.street_address%>"><br><br>
  <label>Category: </label><br>
  <textarea name="category" rows="8" cols="80"><%=@restaurant.category%></textarea><br><br>
  <label>Notes about what the restaurant is known for: </label><br>
  <textarea name="tips" rows="8" cols="80"><%=@restaurant.tips%></textarea><br><br>
  <input type="submit" value="submit">
</form>
